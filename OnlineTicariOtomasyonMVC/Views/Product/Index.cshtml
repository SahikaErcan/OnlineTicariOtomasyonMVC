@using OnlineTicariOtomasyonMVC.Models.Classes;
@model List<Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <tr class="bg-dark text-light">
        <th>ID</th>
        <th>ÜRÜN</th>
        <th>MARKA</th>
        <th>STOK</th>
        <th>ALIŞ FİYAT</th>
        <th>SATIŞ FİYAT</th>
        <th>KATEGORİ</th>
        <th>GÖRSEL</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>
    @foreach (var p in Model)
    {
        <tr>
            <td>@p.ProductId</td>
            <td>@p.ProductName</td>
            <td>@p.Brand</td>
            <td>@p.Stock</td>
            <td>@p.PurchasePrice</td>
            <td>@p.SellingPrice</td>
            <td>@p.Category.CategoryName</td>
            <td>@p.ProductImage</td>
            <td>
                <a href="/Product/ProductDelete/@p.ProductId" class="btn btn-danger pl-4 pr-4">Sil</a>
            </td>
            <td>
                <a href="/Product/ProductBring/@p.ProductId" class="btn btn-warning text-light">Güncelle</a>
            </td>
        </tr>
    }

</table>
<a href="/Product/NewProduct" class="btn btn-primary">Yeni Ürün</a>

